{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cmake",
            "label": "CMake: build active target",
            "command": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "cmake",
            "label": "CMake: clean rebuild active",
            "command": "cleanRebuild",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Flash: fw",
            "command": "JLink",
            "dependsOn": "CMake: build active target",
            "args": [
                "-CommanderScript",
                "scripts/flash_debug_command.jlink"
            ],
            "group": "test"
        },
    ]
}